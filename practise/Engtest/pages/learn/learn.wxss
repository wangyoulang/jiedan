.container {
  padding: 20rpx;
}

.phonetic-selector {
  width: 100%;
  position: relative;
}

.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 30rpx;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.selected-phonetic {
  font-size: 32rpx;
  color: #333;
}

.arrow {
  width: 0;
  height: 0;
  border-left: 12rpx solid transparent;
  border-right: 12rpx solid transparent;
  transition: transform 0.3s;
}

.arrow-down {
  border-top: 12rpx solid #666;
}

.arrow-up {
  border-bottom: 12rpx solid #666;
  transform: rotate(180deg);
}

.phonetic-list {
  position: absolute;
  top: 100%;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  margin-top: 10rpx;
  max-height: 0;
  overflow: hidden;
  transition: max-height 0.3s;
  z-index: 100;
}

.phonetic-list.show {
  max-height: 800rpx;
  overflow-y: auto;
}

.phonetic-group {
  padding: 20rpx 0;
}

.group-title {
  padding: 10rpx 30rpx;
  font-size: 28rpx;
  color: #666;
  background: #f5f5f5;
}

.group-content {
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
}

.phonetic-item {
  width: 50%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.phonetic-symbol {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.phonetic-example {
  font-size: 24rpx;
  color: #666;
}

/* 单词卡片样式 */
.word-card-container {
  width: 100%;
  padding: 30rpx;
  margin-top: 30rpx;
}

.word-card {
  background: #fff;
  padding: 60rpx 40rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 40rpx;
}

.word-text {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.word-phonetic {
  font-size: 32rpx;
  color: #666;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
  flex-wrap: wrap;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  min-width: 160rpx;
  margin: 0;
  font-size: 28rpx;
  border-radius: 8rpx;
}

.action-btn.prev, .action-btn.next {
  background: #f5f5f5;
  color: #666;
}

.action-btn.know {
  background: #4CAF50;
  color: white;
}

.action-btn.unknown {
  background: #FF5722;
  color: white;
}

.action-btn[disabled] {
  background: #ccc !important;
  color: #999 !important;
}

.progress {
  text-align: center;
  margin-top: 30rpx;
  color: #666;
  font-size: 28rpx;
} 