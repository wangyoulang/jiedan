.container {
  padding: 20rpx;
}

.phonetic-groups {
  width: 100%;
}

.group {
  margin-bottom: 30rpx;
}

.group-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.phonetic-list {
  display: flex;
  flex-wrap: wrap;
  padding: 20rpx 0;
}

.phonetic-item {
  padding: 20rpx;
  margin: 10rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.phonetic-item.selected {
  background: #007AFF;
  color: white;
}

.phonetic-symbol {
  font-size: 28rpx;
}

.word-count {
  font-size: 24rpx;
  color: #666;
}

.selected .word-count {
  color: rgba(255, 255, 255, 0.8);
}

.word-list {
  margin-top: 30rpx;
  background: white;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.word-section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.word-items {
  padding: 20rpx 0;
}

.word-item {
  padding: 20rpx;
  border-bottom: 1px solid #f5f5f5;
  display: flex;
  flex-direction: column;
}

.word {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 8rpx;
}

.phonetic {
  font-size: 24rpx;
  color: #666;
}

.no-words {
  text-align: center;
  padding: 40rpx;
  color: #666;
  font-size: 28rpx;
} 