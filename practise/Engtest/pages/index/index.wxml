<view class="container">
  <view class="header">
    <text class="title">音标背单词</text>
  </view>

  <view class="menu-list">
    <!-- 背单词按钮 -->
    <view class="menu-item" bindtap="goToLearnWords">
      <view class="menu-icon">📚</view>
      <view class="menu-text">背单词</view>
      <view class="menu-desc">根据音标学习新单词</view>
    </view>

    <!-- 已背单词按钮 -->
    <view class="menu-item" bindtap="goToWordHistory">
      <view class="menu-icon">📝</view>
      <view class="menu-text">我的词库</view>
      <view class="menu-desc">查看已学习的单词</view>
    </view>

    <!-- 用户中心按钮 -->
    <view class="menu-item" bindtap="handleUserCenter">
      <view class="menu-icon">👤</view>
      <view class="menu-text">{{hasUserInfo ? '个人中心' : '登录'}}</view>
      <view class="menu-desc">{{hasUserInfo ? '查看学习数据' : '登录以同步数据'}}</view>
    </view>
  </view>
</view> 